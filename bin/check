#!/usr/bin/env bash

set -e
vscode-clear

if [[ $1 == "--features" ]]; then
    shift
    features="$1"
fi

if [ ! -z "$features" ]; then
    features="--features $features"
fi

old=$(git rev-parse --quiet --verify refs/stash || true)

git stash --quiet
# git stash --include-untracked --quiet

new=$(git rev-parse --quiet --verify refs/stash)

if [ "$old" != "$new" ]; then
    echo "$ git stash --quiet"

    trap end INT
fi

end() {
    set -e

    if [ "$old" != "$new" ]; then
        echo "$ git stash pop --quiet"
        git stash pop --quiet
    fi
}

try() {
    echo "$" $*
    $*

    exit_code=$?
    if [ $exit_code -ne 0 ]; then
        end
        exit $exit_code
    fi
}

set +e

try cargo test $features
try cargo clippy --all-targets $features
try cargo fmt --all -- --check

export RUSTFLAGS="-D warnings"
try cargo build
unset RUSTFLAGS

end
